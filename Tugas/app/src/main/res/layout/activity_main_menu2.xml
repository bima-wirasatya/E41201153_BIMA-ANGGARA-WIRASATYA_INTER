<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".mainMenu2">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Game News"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dmcPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/dmc" />

        <TextView
            android:id="@+id/dmctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devil May Cry"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/valoPict"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/valorant" />

    <TextView
        android:id="@+id/valotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valorant"
        android:textAlignment="center"
        android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pgrPict"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/pgr" />

        <TextView
            android:id="@+id/pgrtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punishing Gray raven"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="Back"/>

</LinearLayout>